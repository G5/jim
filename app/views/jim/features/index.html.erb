<div class="page-header">
  <h1>Features</h1>
</div>

<% @features.each do |feature| %>
  <div class="panel panel-<%= feature.enabled? ? "success" : "danger" %> <%= feature.id %>">
    <div class="panel-heading">
      <%= feature.id %>
    </div>
    <div class="panel-body">
      <p>
        <%= feature.description %>
      </p>
    </div>
  </div>
<% end %>
