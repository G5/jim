<%= enablements_list_item(environment) do %>
  <p>
    Environment variable '<%= environment.variable_name %>':

    <%= environment_value(environment) %>
  </p>

  <% if environment.regex.present? %>
    <% if environment.enabled? %>
      matched
    <% else %>
      did not match
    <% end %>

    pattern <code><%= environment.regex.inspect %></code>
  <% else %>
    <% if environment.enabled? %>
      was not blank
    <% else %>
      was blank
    <% end %>
  <% end %>

  <% if environment.example.present? %>
    <p>
      Example: <em><%= environment.example %></em>
    </p>
  <% end %>
<% end %>
