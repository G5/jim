<div class="page-header">
  <h1>Features</h1>
</div>

<% @features.each do |feature| %>
  <% enabled = Jim::FeatureManager.instance.enabled?(feature["id"].to_sym) %>

  <div class="panel panel-<%= enabled ? "success" : "danger" %> <%= feature["id"] %>">
    <div class="panel-heading">
      <%= feature["id"] %>
    </div>
    <div class="panel-body">
      <p>
        <%= feature["description"] %>
      </p>
    </div>
  </div>
<% end %>
