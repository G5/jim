<%= enablements_list_item(environment) do %>
  <dl class="dl-horizontal">
    <dt>
      Environment Variable
    </dt>
    <dd>
      <code><%= environment.variable_name %></code>
    </dd>

    <% if !environment.enabled? && environment.example.present? %>
      <dt>
        Example
      </dt>
      <dd>
        <code><%= environment.example %></code>
      </dd>
    <% end %>

    <dt>
      Value
    </dt>
    <dd>
      <%= environment_value(environment) %>
    </dd>

    <dt>
      Test
    </dt>
    <dd>
      <% if environment.regex.present? %>
        <code><%= environment.regex.inspect %></code>
      <% else %>
        presence
      <% end %>
    </dd>
  </dl>
<% end %>
